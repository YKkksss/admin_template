# 应用配置
APP_NAME=Admin Template API
APP_VERSION=0.1.0
DEBUG=true

# 安全配置（生产环境务必替换）
SECRET_KEY=your-secret-key-change-in-production

# 数据库配置（Tortoise ORM）
# 推荐 PostgreSQL：
DATABASE_URL=postgres://postgres:password@localhost:5432/admin_db
# PostgreSQL 是否启用 SSL（部分环境关闭 SSL，默认 false）
POSTGRES_SSL=false
# 备选 MySQL：
# DATABASE_URL=mysql://root:password@localhost:3306/admin_db
# 如果你只是想快速启动验证，也可以先用 SQLite（不建议生产使用）：
# DATABASE_URL=sqlite://./dev.db

# Redis 配置（可选）
REDIS_URL=redis://localhost:6379/0

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 开发期初始化超级管理员（用于前后端联调，生产环境请关闭或移除）
INIT_SUPERUSER=true
SUPERUSER_USERNAME=vben
SUPERUSER_PASSWORD=123456
SUPERUSER_REAL_NAME=Vben
SUPERUSER_ROLE_CODE=super
SUPERUSER_ROLE_NAME=超级管理员

# CORS 配置（JSON 数组字符串）
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]
