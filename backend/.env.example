# 应用配置
APP_NAME=Admin Template API
APP_VERSION=0.1.0
DEBUG=true

# 安全配置（生产环境务必替换）
SECRET_KEY=your-secret-key-change-in-production

# 数据库配置（Tortoise ORM）
# 推荐 PostgreSQL：
DATABASE_URL=postgres://postgres:password@localhost:5432/admin_db
# PostgreSQL 是否启用 SSL（部分环境关闭 SSL，默认 false）
POSTGRES_SSL=false
# 备选 MySQL：
# DATABASE_URL=mysql://root:password@localhost:3306/admin_db
# 如果你只是想快速启动验证，也可以先用 SQLite（不建议生产使用）：
# DATABASE_URL=sqlite://./dev.db

# Redis 配置（可选）
REDIS_URL=redis://localhost:6379/0

# JWT 配置
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 会话配置
# 登录会话模式：single=单端登录，multi=多端登录
# 说明：如果不设置该环境变量，则读取系统配置 auth.login.mode（默认 multi）
SESSION_LOGIN_MODE=multi

# 开发期初始化超级管理员（用于前后端联调，生产环境请关闭或移除）
INIT_SUPERUSER=true
SUPERUSER_USERNAME=vben
SUPERUSER_PASSWORD=123456
SUPERUSER_REAL_NAME=Vben
SUPERUSER_ROLE_CODE=super
SUPERUSER_ROLE_NAME=超级管理员

# CORS 配置（JSON 数组字符串）
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# 文件/附件存储（当前仅实现本地 local 存储）
# FILE_STORAGE_ROOT 默认：backend/storage/files
FILE_STORAGE_ROOT=./storage/files
# 单文件大小限制（MB）
FILE_MAX_SIZE_MB=50

# Excel 导入导出限制
EXCEL_EXPORT_MAX_ROWS=20000
EXCEL_IMPORT_MAX_ROWS=5000
